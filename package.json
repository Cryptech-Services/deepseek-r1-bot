{
  "name": "deepseek-r1-bot",
  "version": "1.0.0",
  "description": "A Discord bot which uses DeepSeek-R1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node ./dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --exitcrash -x 'ts-node ./src/index.ts'",
    "lint": "eslint .",
    "check-format": "prettier . --check",
    "format": "prettier --write \"**/*.+(js|ts|json)\"",
    "clean": "rimraf dist"
  },
  "author": "Cryptech Services",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.12.0",
    "eslint": "^9.21.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-env": "^7.0.3",
    "discord.js": "^14.17.3",
    "dotenv": "^16.4.7",
    "moment": "^2.30.1",
    "sequelize": "^6.37.5",
    "sqlite3": "^5.1.7"
  }
}
